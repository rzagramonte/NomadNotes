<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NomadNotes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>My Blogs</h1>
    <ul>
    <% blogs.forEach( el => { %>
            <li class='blogItem' data-id='<%=el._id%>'>
                <h2><%= el.title %></h2>
                <p><%= el.body %></p>
                <span><%= el.likes %></span>
                <span class='fa fa-thumbs-up'></span>
                <span class='fa fa-trash del'></span>
            </li>
    <% }) %>    
    </ul>

    <form action="/blogs/createBlog" method='POST'>
        <input type="text" placeholder="Enter Text Here" name='title'>
        <input type="text" placeholder="Enter Text Here" name='body'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>