<%- include('partials/header') -%>

    <div>
        <section>
        <h1>blog.title</h1>
        <a href="userprofile">
            <h3>blog.userName</h3>
        </a>
        <p>blog.body</p>
        <span><%= blog.likes %></span>
        <span><%= blog.comments %></span>
        <span class='likes fa fa-thumbs-up'></span>
        </section>
        <section>
            <a href="">Add a comment</a>
            <ul>
                <% comments.forEach( el => { %>
                    <li class='comment' data-id='<%=el._id%>'>
                        <h3><%= el.userName %></h3>
                        <p><%= el.body %></p>
                        <span><%= el.likes %></span>
                        <span class='likes fa fa-thumbs-up'></span>
                        <!--<span class='reply'></span>-->
                    </li>
            <% }) %> 
            </ul>
        </section>
    </div>

<%- include('partials/footer') -%>