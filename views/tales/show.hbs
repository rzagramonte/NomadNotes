<div class="row">
    <div class="col s12 m8">
        <h3>{{tale.title}}
            <small>{{{editIcon tale.user user tale._id false}}}</small>
        </h3>
        <div class="card tale">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{tale.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{tale.user.displayName}}</span>
                <img src="{{tale.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/tales/user/{{tale.user._id}}">More From {{tale.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>